pipeline{
    agent any

    stages{
        stage('Build'){
            steps{
                bat mvn -B -DskipTests clean package
            }
        }
        stage('Test'){
            steps{
                bat mvn test
            }
            post{
                always{
                    junut 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Delivery'){
            steps{
                echo "Delivery completed"
            }
        }
    }
}