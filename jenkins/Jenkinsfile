pipeline{
    agent any

    stages{
        stage('Build'){
            steps{
                mvn -B -DskipTests clean
            }
        }
        stage('Test'){
            steps{
                bat mvn test
            }
            // post{
            //     always{
            //         junut 'target/surefire-reports/*.xml'
            //     }
            // }
        }
        stage('Delivery'){
            steps{
                echo "Delivery completed"
            }
        }
    }
}